    computer_hand.append( full_card )
    del aces[x][y]
def final():
  global player_hand
  print "PLAYERS HAND:"
  print player_hand
  print "COMPUTER HAND:"
  print computer_hand
def next():
  global tb,stake,cb,bet,count
  choice=int(input("Press 1 for call\t2 for fold\t3 for raise"))
  if choice==1:
    stake=tb+bet+cb
    tb=stake
    print("Total Stake is: "+str(stake))
    os.system('clear')
    if count==1:
      fcard()
      next()
    elif count==2:
      rcard()
      next()
    elif count==3:
      tcard()
      next()
      count=4
    else:
      final()
  elif choice==3:
    rase=int(input("Enter amount you want to raise: "))
    cb=rase
    stake=tb+rase+cb+bet*2
    tb=stake
    print("Total Stake is: ",stake)
    os.system('clear')
    if count==1:
      fcard()
      next()
    elif count==2:
      rcard()
      next()
    elif count==3:
      tcard()
      next()
    else:
      final()
  elif choice==2:
    #stake=stake+bet
    #print("Total Stake is: ",stake)
    os.system('clear')
    print("COmputer Wins!!!!")
  else:
    print("Not a valid Entry!!")
    next()
