    computer_hand.append( full_card )
    del aces[x][y]
def tcard():
  global z,count
  count=count+1
  print("\nThe Turn is:\n")
  for j in range(0,1):
    x=random.randrange(0,4)
    y=random.randrange(0,z)
    z=z-1
    cards(x,y)
    card_value = str( aces[x][y] )
    card_suite = ""
    full_card = ""
    if( x == 0 ):
         card_suite = "H"
    elif( x == 1 ):
         card_suite = "S"
    elif( x == 2 ):
