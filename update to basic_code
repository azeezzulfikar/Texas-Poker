def pcard():
  global z, player_hand
  for j in range(0,2):
     x=random.randrange(0,4)
     y=random.randrange(0,z)
     z=z-1
     cards(x,y)
     card_value = str( aces[x][y] )
     card_suite = ""
     full_card = ""
     if( x == 0 ):
         card_suite = "H"
     elif( x == 1 ):
         card_suite = "S"
     elif( x == 2 ):
         card_suite = "D"
     elif( x == 3 ):
         card_suite = "C"
     else:
         print "X HAS WRONG VALUE!"
     full_card = card_value + card_suite
     player_hand.append( full_card )
     del aces[x][y]
def ccard():
  global z
  print("\nComputer cards are:\n")
  for j in range(0,2):
    x=random.randrange(0,4)
    y=random.randrange(0,z)
    z=z-1
    cards(x,y)
    card_value = str( aces[x][y] )
    card_suite = ""
    full_card = ""
    if( x == 0 ):
      card_suite = "H"
    elif( x == 1 ):
      card_suite = "S"
    elif( x == 2 ):
      card_suite = "D"
    elif( x == 3 ):
      card_suite = "C"
    else:
      print "X HAS WRONG VALUE!"
    full_card = card_value + card_suite
    computer_hand.append( full_card )
    del aces[x][y]
def fcard():
  global z,count
  count=1
  count=count+1
  print("\n The Flop is:\n")
  for j in range(0,3):
    x=random.randrange(0,4)
    y=random.randrange(0,z)
    z=z-1
    cards(x,y)
    card_value = str( aces[x][y] )
    card_suite = ""
    full_card = ""
    if( x == 0 ):
         card_suite = "H"
    elif( x == 1 ):
         card_suite = "S"
    elif( x == 2 ):
         card_suite = "D"
    elif( x == 3 ):
         card_suite = "C"
    else:
       print "X HAS WRONG VALUE!"
    full_card = card_value + card_suite
    player_hand.append( full_card )
    computer_hand.append( full_card )
    del aces[x][y]
def rcard():
  global z,count
  count=count+1
  print("\nThe River is:\n")
